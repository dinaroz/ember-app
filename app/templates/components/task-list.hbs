<div class="task" dir="rtl">
    <label class="checkbox-button">
        {{input checked=isDoneStatus  type="checkbox" class="checkbox-button__input" name="choice1" change=(action "updateTaskStatus") }}
        <span class="checkbox-button__control"></span>
        <span class="checkbox-button__label"></span>
    </label>
       <span class="{{if isDoneStatus "done_task"}}" onclick={{action "readTask" }}>
            {{ item.id }}. משימה {{item.name}}
        </span>
    <div class="remove-icon" {{action "removeTask" }}>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-x"
            viewBox="0 0 16 16">
            <path
                d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
        </svg>
    </div>
</div>