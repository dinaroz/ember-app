<div class="div-wrapper header">
    <div class="task-header">

        {{#if isShowingModal}}
        {{#modal-dialog
        onClose=(action "toggleModal")
        targetAttachment="center"
        translucentOverlay=true
        containerClass='custom-styles-conteiner'
        }}
        <div onclick={{action "toggleModal" }} class="close-modal">
            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" class="bi bi-x"
                viewBox="0 0 16 16">
                <path
                    d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
            </svg>
        </div>
        {{create-task-form}}
        {{/modal-dialog}}
        {{/if}}
        <div class="create-icon-wrapper" {{action (action "toggleModal" )}}><svg xmlns="http://www.w3.org/2000/svg"
                width="24" height="24" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path
                    d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
            </svg>
        </div>
        <span>משימות</span>
    </div>
</div>
<div class="scroll">
    <div class="div-wrapper">
        <table class="table">
            <tbody>
                {{#each model as |task|}}
                <tr>
                    <td class="td-task">
                        {{task-list item=task model=model}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<div class="div-wrapper">
    <div class="footer-text" id="footer-text1">{{model.length}} :סה"כ</div>
    <div class="footer-text" id="footer-text2">{{mapTask.doneTaskArr.length}} :הושלמו</div>
    <div class="footer-text" id="footer-text3"> {{mapTask.newTaskArr.length}} :לסיום</div>
</div>